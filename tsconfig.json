{
    "compilerOptions": {
      "target": "ES2021",
      "allowJs": true,
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noEmitHelpers": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["esnext", "ES2021", "dom", "dom.iterable", "scripthost", "ES5", "ES6", "es2015"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "tests/**/*.ts",
      "tests/**/*.tsx",
      "global.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  